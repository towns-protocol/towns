{
  "name": "harmony",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --cache",
    "lint:fix": "yarn lint --fix",
    "lint:format": "prettier --write .",
    "build:contracts-zion": "yarn workspace @harmony/zion-governance build",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "workspaces": [
    "clients/web/app",
    "clients/web/lib",
    "clients/web/sample-app",
    "clients/governance-ui",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,mdx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.1"
  },
  "packageManager": "yarn@3.2.2"
}

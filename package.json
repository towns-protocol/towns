{
    "name": "towns-protocol",
    "version": "0.0.0",
    "license": "MIT",
    "packageManager": "bun@1.2.14",
    "scripts": {
        "anvil": "bunx anvil",
        "build": "turbo build",
        "cast": "bunx cast",
        "clean": "./scripts/bun-clean.sh",
        "csb:build": "turbo build --filter @towns-protocol/sdk",
        "csb:cb": "bun run csb:clean && bun run csb:build",
        "csb:clean": "bun run --filter=./packages/* clean",
        "csb:turbo-no-sdk": "bash -c 'bun run turbo run build test:ci $(./scripts/filter-without-sdk.sh)'",
        "csb:wait": "yarn csb:wait:entitlements",
        "csb:wait:entitlements": "wait-on https://localhost:5157/info --timeout=900000 --i=5000 --verbose",
        "csb:wait:no-entitlements": "wait-on https://localhost:5158/info --timeout=900000 --i=5000 --verbose",
        "lint": "turbo lint",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "syncpack:check": "syncpack list-mismatches",
        "syncpack:fix": "syncpack fix-mismatches && syncpack format",
        "test": "turbo test",
        "test:build": "turbo test:build",
        "test:unit": "turbo test:unit -- --silent"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.15.3",
        "@typechain/ethers-v5": "^10.1.1",
        "@types/node": "^20.14.8",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "lerna": "^8.1.3",
        "lint-staged": "^13.1.2",
        "prettier": "^3.5.3",
        "publint": "^0.2.8",
        "syncpack": "^10.7.3",
        "turbo": "^2.0.12",
        "typechain": "^8.1.1",
        "typescript": "^5.8.2",
        "vitest": "3.0.5",
        "wait-on": "^7.0.1"
    },
    "lint-staged": {
        "*.{js,mdx,ts,tsx}": [
            "eslint --fix"
        ],
        "*.{json,yml}": [
            "prettier --write"
        ]
    },
    "syncpack": {
        "dependencyTypes": [
            "dev",
            "prod"
        ],
        "indent": "    ",
        "sortFirst": [
            "name",
            "description",
            "version",
            "author",
            "license",
            "private",
            "packageManager",
            "type",
            "main",
            "types",
            "scripts"
        ],
        "versionGroups": [
            {
                "label": "Different versions in worker & client - need v2.x in workers, which breaks client",
                "dependencies": [
                    "siwe"
                ],
                "packages": [
                    "siwe-worker",
                    "worker-common"
                ],
                "dependencyTypes": [
                    "prod",
                    "dev",
                    "peer"
                ]
            }
        ]
    },
    "workspaces": [
        "protocol",
        "packages/*",
        "packages/workers/*",
        "services/*"
    ],
    "dependencies": {
        "pino-pretty": "^13.0.0"
    }
}

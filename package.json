{
    "name": "towns-protocol",
    "version": "0.0.0",
    "license": "MIT",
    "packageManager": "pnpm@9.12.3",
    "scripts": {
        "anvil": "pnpm exec turbo run anvil --filter=@towns-protocol/contracts",
        "build": "turbo build",
        "cast": "pnpm exec turbo run cast --filter=@towns-protocol/contracts",
        "clean": "./scripts/pnpm-clean.sh",
        "csb:build": "turbo build --filter @towns-protocol/sdk",
        "csb:cb": "pnpm run csb:clean && pnpm run csb:build",
        "csb:clean": "turbo run clean --filter='@towns-protocol/*'",
        "csb:prettier:check": "prettier --check ./packages",
        "csb:prettier:fix": "prettier --write ./packages",
        "csb:test": "turbo run test --filter='@towns-protocol/*' && echo ALL GOOD || (echo NOT PASSED; exit 1)",
        "csb:test-remote": "turbo run test --filter=@towns-protocol/sdk",
        "csb:turbo": "turbo run build test:ci --filter='@towns-protocol/*'",
        "csb:turbo-no-sdk": "turbo run build test:ci --filter='@towns-protocol/*' --filter='!@towns-protocol/sdk'",
        "csb:wait": "pnpm run csb:wait:entitlements",
        "csb:wait:entitlements": "wait-on https://localhost:5157/info --timeout=900000 --i=5000 --verbose",
        "csb:wait:no-entitlements": "wait-on https://localhost:5158/info --timeout=900000 --i=5000 --verbose",
        "lint": "turbo lint",
        "postinstall": "husky install",
        "prepare": "husky install",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "syncpack:check": "syncpack list-mismatches",
        "syncpack:fix": "syncpack fix-mismatches && syncpack format",
        "test": "turbo test",
        "test:build": "turbo test:build",
        "test:unit": "turbo test:unit -- --silent"
    },
    "dependencies": {
        "pino-pretty": "^13.0.0",
        "vite-plugin-wasm": "^3.4.1"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.15.3",
        "@types/node": "^20.14.8",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.4",
        "lerna": "^8.1.3",
        "lint-staged": "^13.1.2",
        "prettier": "^3.5.3",
        "publint": "^0.2.8",
        "syncpack": "^10.7.3",
        "ts-node": "^10.9.1",
        "turbo": "^2.5.4",
        "typescript": "^5.8.2",
        "vitest": "^3.2.3",
        "wait-on": "^7.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,mdx,ts,tsx}": [
            "eslint --fix"
        ],
        "*.{json,yml}": [
            "prettier --write"
        ]
    },
    "syncpack": {
        "dependencyTypes": [
            "dev",
            "prod"
        ],
        "indent": "    ",
        "sortFirst": [
            "name",
            "description",
            "version",
            "author",
            "license",
            "private",
            "packageManager",
            "type",
            "main",
            "types",
            "scripts"
        ],
        "versionGroups": [
            {
                "label": "Different versions in worker & client - need v2.x in workers, which breaks client",
                "dependencies": [
                    "siwe"
                ],
                "packages": [
                    "siwe-worker",
                    "worker-common"
                ],
                "dependencyTypes": [
                    "prod",
                    "dev",
                    "peer"
                ]
            }
        ]
    }
}

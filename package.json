{
    "name": "towns-protocol",
    "version": "0.0.0",
    "license": "MIT",
    "packageManager": "bun@1.3.3",
    "scripts": {
        "build": "turbo build",
        "clean": "./scripts/yarn-clean.sh",
        "csb:build": "turbo build --filter @towns-protocol/sdk",
        "csb:cb": "bun run csb:clean && bun run csb:build",
        "csb:clean": "bun run csb:command run clean",
        "csb:command": "bash -c 'for pkg in $(bun run csb:list); do echo \"Running in $pkg\"; bun run --filter $pkg $@; done'",
        "csb:list": "bun pm ls | grep '^├\\|^└' | grep packages | cut -d'@' -f1 | sed 's/^[├└]── //'",
        "csb:list:exclude:filter": "bun run csb:list | xargs -I arg echo -n \"--filter=!arg \"",
        "csb:list:filter": "bun run csb:list | xargs -I arg echo -n \"--filter arg \"",
        "csb:list:filter-without-sdk": "bun run csb:list | grep -v sdk | xargs -I arg echo -n \"--filter arg \"",
        "csb:list:include": "bun run csb:list | xargs -I arg echo -n \"--include arg \"",
        "csb:prettier:check": "prettier --check ./packages",
        "csb:prettier:fix": "prettier --write ./packages",
        "csb:test": "bun run csb:command run test && echo ALL GOOD || (echo NOT PASSED; exit 1)",
        "csb:test-remote": "bun run --filter @towns-protocol/sdk test",
        "csb:turbo": "bash -c 'bun run turbo run build test:ci $(bun run csb:list:filter)'",
        "csb:turbo-no-sdk": "bash -c 'bun run turbo run build test:ci $(bun run csb:list:filter-without-sdk)'",
        "lint": "turbo lint",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "syncpack:check": "syncpack list-mismatches",
        "syncpack:fix": "syncpack fix-mismatches && syncpack format",
        "test": "turbo test",
        "test:build": "turbo test:build",
        "test:unit": "turbo test:unit"
    },
    "dependencies": {
        "pino-pretty": "^13.0.0"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.15.3",
        "dotenv": "^17.2.3",
        "dotenv-cli": "^10.0.0",
        "@types/node": "^20.14.8",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "lerna": "^8.1.3",
        "lint-staged": "^13.1.2",
        "prettier": "^3.5.3",
        "prettier-plugin-solidity": "^1.4.2",
        "prettier-plugin-tailwindcss": "^0.4.1",
        "publint": "^0.2.8",
        "syncpack": "^10.7.3",
        "ts-node": "^10.9.1",
        "turbo": "^2.6.3",
        "typescript": "~5.8.3",
        "vite-plugin-wasm": "^3.4.1",
        "vitest": "^3.2.3",
        "wait-on": "^7.0.1"
    },
    "lint-staged": {
        "*.{js,mdx,ts,tsx}": [
            "eslint --fix"
        ],
        "*.{json,yml}": [
            "prettier --write"
        ]
    },
    "syncpack": {
        "dependencyTypes": [
            "dev",
            "prod"
        ],
        "indent": "    ",
        "sortFirst": [
            "name",
            "description",
            "version",
            "author",
            "license",
            "private",
            "packageManager",
            "type",
            "main",
            "types",
            "scripts"
        ],
        "versionGroups": [
            {
                "label": "Different versions in worker & client - need v2.x in workers, which breaks client",
                "dependencies": [
                    "siwe"
                ],
                "packages": [
                    "siwe-worker",
                    "worker-common"
                ],
                "dependencyTypes": [
                    "prod",
                    "dev",
                    "peer"
                ]
            }
        ]
    },
    "workspaces": [
        "protocol",
        "packages/*",
        "packages/workers/*",
        "packages/examples/*",
        "services/*"
    ]
}

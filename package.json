{
    "name": "harmony",
    "license": "MIT",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "lint": "yarn workspaces foreach -p run lint",
        "build:contracts-governance": "yarn workspace @harmony/zion-governance build",
        "publish:contracts-governance": "yarn workspace @harmony/zion-governance publish",
        "prepare": "husky install",
        "postinstall": "husky install",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write ."
    },
    "workspaces": [
        "clients/web/app",
        "clients/web/lib",
        "clients/web/sample-app",
        "clients/governance-ui",
        "clients/contract-debug-ui",
        "contracts/zion-governance",
        "packages/*"
    ],
    "lint-staged": {
        "*.{js,mdx,ts,tsx}": [
            "eslint --fix"
        ],
        "*.{json,yml}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@types/node": "^18.7.23",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-mocha": "^10.1.0",
        "eslint-plugin-n": "^15.3.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "packageManager": "yarn@3.2.2"
}

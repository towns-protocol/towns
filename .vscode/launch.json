{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest: current file in 'casablanca/mecholm/'",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${file}", "--config", "${workspaceFolder}/casablanca/mecholm/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'casablanca/sdk/'",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "RIVER_TEST_CONNECT": "single", "DEBUG": "csb:*,test:*", "DEBUG_DEPTH":"10" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${file}", "--config", "${workspaceFolder}/casablanca/sdk/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'web/lib/' (multi)",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "RIVER_TEST_CONNECT": "multi", "CASABLANCA_SERVER_URL": "http://localhost:5170,http://localhost:5171,http://localhost:5172,http://localhost:5173,http://localhost:5174", "DEBUG": "csb:*,test:*", "DEBUG_DEPTH":"10" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'web/lib/' (single)",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "RIVER_TEST_CONNECT": "single", "CASABLANCA_SERVER_URL": "http://localhost:5158", "DEBUG": "csb:*,test:*", "DEBUG_DEPTH":"10" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'web/lib/' DEBUG=csb:*",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "DEBUG": "csb:*", "DEBUG_DEPTH":"10" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${file}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Casablanca Core Jest Tests Jsdom",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--config",
        "${workspaceRoot}/casablanca/core/jest.config.jsdom.ts",
        "${fileBasenameNoExtension}",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch App to Chrome",
      "url": "http://localhost:3000",
      "request": "launch",
      "type": "chrome",
      "preLaunchTask": "App",
      "webRoot": "${workspaceFolder}/clients/web/app",
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir"
    },
  ]
}

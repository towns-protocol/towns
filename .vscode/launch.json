{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Casablanca Core Jest Tests Jsdom",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--config",
        "${workspaceRoot}/casablanca/core/jest.config.jsdom.ts",
        "${fileBasenameNoExtension}",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Jest: current file in 'mecholm/ Casablanca'",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/casablanca/mecholm/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'web/lib/'",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit", "--detectOpenHandles"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'web/lib/' NODE_ENV=Casablanca",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "PRIMARY_PROTOCOL": "casablanca", "DEBUG": "csb:*", "DEBUG_DEPTH":"10" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: Load Test current file in 'web/lib/' NODE_ENV=Casablanca",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "PRIMARY_PROTOCOL": "casablanca" },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Jest: current file in 'sdk/' Casablanca",
      "type": "node",
      "request": "launch",
      "env": { "NODE_ENV": "development", "PRIMARY_PROTOCOL": "casablanca", "DEBUG": "csb:*,test:*", "DEBUG_DEPTH":"10"  },
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--experimental-vm-modules", "--experimental-wasm-modules"],
      "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/casablanca/sdk/jest.config.ts", "-i", "--no-cache", "--forceExit"],
      "console": "integratedTerminal",
    },
    {
      "name": "Launch App to Chrome",
      "url": "http://localhost:3000",
      "request": "launch",
      "type": "chrome",
      "preLaunchTask": "App",
      "webRoot": "${workspaceFolder}/clients/web/app",
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir"
    },
  ]
}
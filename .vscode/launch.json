    "version": "0.2.0",
    "configurations": [
          {
            "type": "node",
            "request": "launch",
            "name": "Jest: current file in 'web/lib/",
            "env": { "NODE_ENV": "development" },
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["${fileBasenameNoExtension}", "--config", "${workspaceFolder}/clients/web/lib/jest.config.ts", "-i", "--no-cache", "--forceExit"],
            "console": "integratedTerminal",
            "windows": {
              "program": "${workspaceFolder}/clients/web/lib/node_modules/jest/bin/jest"
            }
          }
    ]
}
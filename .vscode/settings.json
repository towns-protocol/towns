{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.workingDirectories": [
    "./packages/dlog",
    "./packages/encryption",
    "./packages/proto",
    "./packages/sdk",
    "./packages/stream-metadata",
    "./packages/stress",
    "./packages/web3",
  ],
  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
  },
  "solidity.formatter": "forge",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  "solidity.defaultCompiler": "remote",
  "solidity.packageDefaultDependenciesContractsDirectory": "contracts/src",
  "solidity.packageDefaultDependenciesDirectory": "lib,node_modules",
  "solidity.compileUsingRemoteVersion": "v0.8.23+commit.f704f362",
  "[makefile]": {
    "editor.renderWhitespace": "all"
  },
  "go.formatTool": "custom",
  "go.testFlags": [
    "-v",
    "-tags",
    "integration",
  ],
  "go.buildTags": "integration",
  "typescript.tsdk": "node_modules/typescript/lib",
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cn\\(([^)]*)\\)",
      "(?:'|\"|`)([^']*)(?:'|\"|`)"
    ]
  ],
  "go.alternateTools": {
    "customFormatter": "${workspaceFolder}/core/fmt.sh",
  },
  "wake.compiler.solc.remappings": [
    "@openzeppelin/=node_modules/@openzeppelin/",
    "account-abstraction/=node_modules/account-abstraction/contracts/",
    "forge-std/=node_modules/forge-std/src/",
    "@prb/math/=node_modules/@prb/math/src/",
    "@prb/test/=node_modules/@prb/test/src/",
    "solady/=node_modules/solady/src/",
    "@towns-protocol/diamond/=node_modules/@towns-protocol/diamond/",
    "crypto-lib/=node_modules/crypto-lib/src/",
    "@solidity/=node_modules/crypto-lib/src/"
  ],
  "vitest.maximumConfigs": 15,
  "vitest.disableWorkspaceWarning": true
}

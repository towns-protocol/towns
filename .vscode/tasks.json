{
    "version": "2.0.0",
    "presentation": {
      "echo": false,
      "reveal": "always",
      "focus": false,
      "panel": "dedicated",
      "showReuseMessage": true
    },
    "tasks": [
      {
        "label": "~Start Local Dev~",
        "dependsOn": [
          "YarnInstall",
          "StartDendrite",
          "StartCasablanca",
          "StartBlockchain",
          "DeployZionGovernance",
          "WatchSharedLib",
          "WatchCasablancaClient",
          "WatchCasablancaCore",
          "StartApp",
          "StartSampleApp",
          "StartUnfurlWorker"
        ],
        // Mark as the default build task so cmd/ctrl+shift+b will create them
        "group": {
          "kind": "build",
          "isDefault": true
        },
      },
      {
        "label": "Start Anvil, Deploy Zion Governance",
        "dependsOn": [
          "StartBlockchain",
          "DeployZionGovernance",
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        },
      },
      {
        "label": "YarnInstall",
        "type": "shell",
        "command": "yarn",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "ephemeral"
        },
      },
      {
        "label": "StartDendrite",
        "type": "shell",
        "command": "./scripts/start-local-dendrite.sh",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-servers"
        },
      },
      {
        "label": "StartCasablanca",
        "type": "shell",
        "command": "sleep 3 && ./scripts/start-local-casablanca.sh",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-servers"
        },
      },
      {
        "label": "StartBlockchain",
        "type": "shell",
        "command": "./scripts/start-local-blockchain.sh",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-servers"
        }
      },
      {
        "label": "DeployZionGovernance",
        "type": "shell",
        "command": "./scripts/wait-for-blockchain.sh && ./scripts/deploy-local-zion-governance-contracts.sh",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "ephemeral"
        }
      },
      {
        "label": "BuildContractTypes",
        "type": "shell",
        "command": "./scripts/build-contract-types.sh localhost",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "ephemeral"
        }
      },
      {
        "label": "WatchSharedLib",
        "type": "shell",
        "command": "./scripts/wait-for-casablanca.sh && cd clients/web/lib && yarn watch",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-watch"
        }
      },
      {
        "label": "WatchCasablancaClient",
        "type": "shell",
        "command": "./scripts/wait-for-casablanca.sh && cd casablanca/packages/client && yarn watch",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-watch"
        }
      },
      {
        "label": "WatchCasablancaCore",
        "type": "shell",
        "command": "./scripts/wait-for-casablanca.sh && cd casablanca/packages/core && yarn watch",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-watch"
        }
      },
      {
        "label": "StartApp",
        "type": "shell",
        "command": "cd clients/web/app && yarn dev",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-clients"
        }
      },
      {
        "label": "StartSampleApp",
        "type": "shell",
        "command": "cd clients/web/sample-app && yarn dev",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-clients"
        }
      },
      {
        "label": "Start MITM - Casablanca",
        "type": "shell",
        "command": "mitmweb -p 7105 --mode reverse:http://localhost:7104/",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-servers"
        }
      }, 
      {
        "label": "Start MITM - Dendrite",
        "type": "shell",
        "command": "mitmweb -p 8009 --mode reverse:http://localhost:8008/",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-servers"
        }
      }, 
      {
        "label": "StartUnfurlWorker",
        "type": "shell",
        "command": "cd servers/unfurl-worker && yarn dev:local",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "local-servers"
        }
      },
    ]
  }
{
    "name": "@zion/core",
    "private": true,
    "packageManager": "yarn@3.2.3",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "test": "yarn test:unit",
        "test:unit": "yarn test-node && yarn test-jsdom",
        "test-jsdom": "yarn node --experimental-vm-modules $(yarn bin jest) --config jest.config.jsdom.ts",
        "test-node": "yarn node --experimental-vm-modules $(yarn bin jest)",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@ethereumjs/util": "^8.0.1",
        "@metamask/eth-sig-util": "^5.0.0",
        "ethers": "^5.7.2",
        "json-rpc-2.0": "^1.4.1",
        "lodash": "^4.17.21",
        "nanoid": "^4.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.2.0",
        "jest": "^29.2.1",
        "jest-extended": "^3.2.0",
        "ts-jest": "^29.0.3",
        "typed-emitter": "^2.1.0",
        "typescript": "^4.8.4"
    },
    "files": [
        "/dist"
    ]
}

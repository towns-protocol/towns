{
    "name": "@zion/server",
    "private": true,
    "packageManager": "yarn@3.2.3",
    "scripts": {
        "build": "tsc --build",
        "dev": "nodemon src/index.ts",
        "start": "ts-node src/index.ts",
        "test": "yarn test:e2e",
        "test:e2e": "run-p -ln \"tg:**\" && echo ALL GOOD || (echo NOT PASSED; exit 1)",
        "test-remote": "TEST_REMOTE_URL=http://localhost:7104/json-rpc jest --config jest.config.jsdom.ts -t \".*-remote\"",
        "tg:other": "jest --testTimeout 20000 --group=explicit-storage",
        "tg:postgres": "STORAGE_TYPE=postgres jest --testTimeout 20000 --group=-explicit-storage",
        "tg:redis": "STORAGE_TYPE=redis jest --testTimeout 20000 --group=-explicit-storage",
        "wait": "timeout 60 bash -c 'while [[ \"$(curl http://localhost:7104/status)\" != \"OK\" ]]; do sleep 1; done' || false"
    },
    "dependencies": {
        "@ethereumjs/util": "^8.0.1",
        "@types/lodash": "^4.14.186",
        "@types/pg": "^8.6.5",
        "@types/pg-format": "^1.0.2",
        "@zion/core": "workspace:^",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "dotenv": "^16.0.3",
        "ethers": "^5.7.2",
        "express": "^4.18.2",
        "ioredis": "^5.2.3",
        "json-rpc-2.0": "^1.4.1",
        "lodash": "^4.17.21",
        "nanoid": "3",
        "pg": "^8.8.0",
        "pg-format": "^1.0.4",
        "supports-color": "^9.2.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.2.0",
        "@types/node": "^18.11.3",
        "@zion/client": "workspace:^",
        "jest": "^29.2.1",
        "jest-extended": "^3.1.0",
        "jest-runner-groups": "^2.2.0",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "engines": {
        "node": ">=18"
    }
}

{
    "name": "@zion/server",
    "private": true,
    "packageManager": "yarn@3.2.3",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "dev": "nodemon --experimental-specifier-resolution=node --esm src/index.ts",
        "my-jest": "yarn node -r ../../../scripts/node-no-warn.js --experimental-vm-modules $(yarn bin jest)",
        "start": "ts-node --experimental-specifier-resolution=node --esm src/index.ts",
        "test": "yarn test:unit",
        "test-remote": "TEST_REMOTE_URL=http://localhost:7104/json-rpc yarn my-jest --config jest.config.jsdom.ts -t \".*-remote\"",
        "test:unit": "run-p -ln tg:redis tg:other && echo ALL GOOD || (echo NOT PASSED; exit 1)",
        "tg:other": "yarn my-jest --group=explicit-storage",
        "tg:postgres": "STORAGE_TYPE=postgres yarn my-jest --group=-explicit-storage",
        "tg:redis": "STORAGE_TYPE=redis yarn my-jest --group=-explicit-storage",
        "wait": "timeout 60 bash -c 'while [[ \"$(curl http://localhost:7104/status)\" != \"OK\" ]]; do sleep 1; done' || false"
    },
    "dependencies": {
        "@ethereumjs/util": "^8.0.4",
        "@zion/core": "workspace:^",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "dotenv": "^16.0.3",
        "ethers": "^5.7.2",
        "express": "^4.18.2",
        "ioredis": "^5.2.3",
        "json-rpc-2.0": "^1.4.1",
        "lodash": "^4.17.21",
        "pg": "^8.8.0",
        "pg-format": "^1.0.4",
        "supports-color": "^9.2.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.14.1",
        "@types/pg": "^8.6.6",
        "@types/pg-format": "^1.0.2",
        "@types/seedrandom": "^3.0.4",
        "@zion/client": "workspace:^",
        "jest": "^29.4.3",
        "jest-extended": "^3.2.4",
        "jest-runner-groups": "^2.2.0",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "seedrandom": "^3.0.5",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "engines": {
        "node": ">=18"
    }
}

{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "launch notification service",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "node",
            "preLaunchTask": "start dev",
            "runtimeArgs": [
                "--env-file",
                ".env.local",
                "--experimental-specifier-resolution=node",
                "--watch",
                "--loader",
                "ts-node/esm"
            ],
            "program": "${workspaceFolder}/dist/server.js"
        }
    ]
}

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run watch",
            "type": "shell",
            "isBackground": true,
            "command": "cd ${workspaceFolder} && yarn tsc --watch",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "start db",
            "type": "shell",
            "command": "docker-compose",
            "args": ["up", "-d", "db"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "start dev",
            "dependsOn": ["run watch", "start db"]
        }
    ]
}

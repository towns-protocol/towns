{
    "name": "notification-service",
    "version": "1.0.0",
    "license": "MIT OR Apache-2.0",
    "private": true,
    "packageManager": "yarn@3.8.0",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch & node --env-file .env.local --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js",
        "start": "node --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js",
        "watch": "tsc --watch",
        "test": "jest",
        "migrate": "prisma migrate deploy",
        "start:migrate": "prisma migrate deploy && node --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js",
        "dev:migrate": "prisma migrate deploy && tsc --watch & node --env-file .env.local --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js"
    },
    "dependencies": {
        "@prisma/client": "5.8.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "http-status-codes": "^2.3.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.11.6",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.19.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "latest",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "prisma": "^5.8.1",
        "ts-jest": "^29.1.2",
        "typescript": "*"
    }
}

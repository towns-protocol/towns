{
    "name": "notification-service",
    "version": "1.0.0",
    "license": "MIT OR Apache-2.0",
    "private": true,
    "packageManager": "yarn@3.8.0",
    "scripts": {
        "keys": "sh ./scripts/create-vapid-keys.sh",
        "build:turbo": "turbo build --filter=notification-service",
        "build": "prisma generate && yarn compile",
        "compile": "esbuild src/server.ts --sourcemap=inline --bundle --platform=node --target=node20 --format=cjs --outfile=dist/server.cjs",
        "db:create-migration:local": "dotenv -e .env.local -- yarn prisma migrate dev --name",
        "db:generate": "prisma generate",
        "db:local": "yarn db:generate & yarn db:migrate:local",
        "db:migrate": "prisma migrate deploy",
        "db:migrate:local": "dotenv -e .env.local -- npx prisma migrate deploy",
        "db:studio": "dotenv -e .env.local -- yarn prisma studio",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "yarn lint --fix",
        "start": "node dist/server.cjs",
        "test": "yarn my-jest"
    },
    "dependencies": {
        "@bufbuild/protobuf": "^1.9.0",
        "@connectrpc/connect": "^1.4.0",
        "@connectrpc/connect-web": "^1.4.0",
        "@parse/node-apn": "^6.0.1",
        "@prisma/client": "^5.17.0",
        "@river-build/proto": "workspace:^",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "helmet": "^7.1.0",
        "http-graceful-shutdown": "^3.1.13",
        "http-status-codes": "^2.2.0",
        "morgan": "^1.10.0",
        "morgan-json": "^1.1.0",
        "winston": "^3.12.0",
        "worker-common": "workspace:^",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.3",
        "@types/morgan": "^1.9.9",
        "@types/morgan-json": "^1.1.3",
        "@types/node": "^20.5.0",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^7.14.1",
        "dotenv-cli": "^7.3.0",
        "esbuild": "^0.21.5",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^35.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "esm": "^3.2.25",
        "jest": "^29.6.2",
        "prettier": "^2.8.8",
        "prisma": "^5.17.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    }
}

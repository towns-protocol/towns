{
    "name": "notification-service",
    "version": "1.0.0",
    "license": "MIT OR Apache-2.0",
    "private": true,
    "packageManager": "yarn@3.8.0",
    "type": "module",
    "scripts": {
        "build": "prisma generate && tsc",
        "dev": "prisma generate && tsc --watch & node --env-file .env.local --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js",
        "start": "node --experimental-specifier-resolution=node --loader ts-node/esm dist/server.js",
        "watch": "tsc --watch",
        "test": "jest",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate deploy",
        "start:migrate": "prisma migrate deploy && node --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js",
        "dev:migrate": "prisma migrate deploy && tsc --watch & node --env-file .env.local --experimental-specifier-resolution=node --watch --loader ts-node/esm dist/server.js"
    },
    "dependencies": {
        "@prisma/client": "^5.10.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "helmet": "^7.1.0",
        "http-graceful-shutdown": "^3.1.13",
        "http-status-codes": "^2.2.0",
        "morgan": "^1.10.0",
        "worker-common": "workspace:^",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.3",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.5.0",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^35.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "jest": "^29.6.2",
        "prettier": "^2.8.8",
        "prisma": "^5.10.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    }
}

{
    "name": "stackup-worker",
    "description": "Stackup Middleware Worker",
    "version": "1.0.0",
    "author": "john@hntlabs.com",
    "license": "MIT OR Apache-2.0",
    "type": "module",
    "scripts": {
        "dev": "echo use dev:local for now - see wrangler.toml",
        "dev:local": "wrangler dev --port ${PORT:-8686}",
        "dev:remote": "wrangler dev --remote",
        "lint": "yarn eslint --format unix ./src",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "publish": "wrangler deploy --env $CF_ENV",
        "tail:stage": "wrangler tail stackup-worker --env test-beta",
        "test": "yarn test:unit",
        "test:unit": "yarn node --experimental-vm-modules $(yarn bin jest)"
    },
    "dependencies": {
        "@river-build/generated": "workspace:^",
        "@river-build/web3": "workspace:^",
        "itty-router": "^2.6.6",
        "userop.js": "^0.3.7",
        "worker-common": "workspace:^"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20240529.0",
        "@types/jest": "^29.5.3",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^8.53.0",
        "jest": "^29.6.2",
        "jest-environment-miniflare": "^2.14.2",
        "miniflare": "^3.20240524.1",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6",
        "wrangler": "^3.58.0"
    }
}

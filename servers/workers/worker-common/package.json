{
    "name": "worker-common",
    "description": "Shared Cloudflare Worker Library",
    "author": "john@hntlabs.com",
    "packageManager": "yarn@3.2.3",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "lint": "yarn eslint --format unix ./src",
        "lint:fix": "yarn lint --fix",
        "my-jest": "yarn node -r ../../../scripts/node-no-warn.js --experimental-vm-modules $(yarn bin jest)",
        "test": "yarn my-jest",
        "test:ci": "yarn test",
        "test:debug": "DEBUG=test yarn my-jest",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@towns/generated": "workspace:^",
        "ethers": "^5.7.2",
        "siwe": "^2.1.3",
        "use-zion-client": "workspace:^"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20230710.1",
        "@types/jest": "^29.4.0",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "eslint": "^8.42.0",
        "jest": "^29.6.2",
        "jest-environment-miniflare": "^2.14.0",
        "miniflare": "^3.20230710.0",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.3",
        "wrangler": "^3.2.0"
    },
    "files": [
        "/dist"
    ]
}

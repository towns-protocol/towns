  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/bin/app.js",
      "preLaunchTask": "npm: build",
      "args": [
        "-c",
        "config.yaml",
        "-p",
        "6789"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Generate registeration file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/bin/app.js",
      "preLaunchTask": "npm: build",
      "args": [
        "-r",
        "zion-registration.yaml",
        "-u",
        "http://localhost:6789",
        "-c",
        "config.yaml",
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
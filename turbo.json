{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "test": {
            "dependsOn": ["build"],
            "cache": false
        },
        "test:ci": {
            "dependsOn": ["build"],
            "cache": false
        },
        "test:ci:legacy": {
            "dependsOn": ["build"],
            "cache": false
        },
        "test:unit": {
            "dependsOn": ["build"],
            "cache": false
        },
        "build": {
            // note: output globs are relative to each package's `package.json`
            // (and not the monorepo root
            "outputs": ["dist/**", "build/**", "out/**"],
            "cache": true,
            "dependsOn": ["^build"]
        },
        "lint": {
            "cache": true
        }
    }
}

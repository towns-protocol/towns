{
    "name": "@harmony/zion-governance",
    "version": "0.1.0",
    "private": true,
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "start": "yarn clean && yarn build",
        "install:dependencies": "../../scripts/install-deps.sh",
        "build": "yarn install:dependencies && yarn build:forge && yarn build:types",
        "build:forge": "FOUNDRY_PROFILE=governance forge build",
        "build:types": "typechain --target=ethers-v5 'artifacts_foundry/**/?(CouncilNFT|CouncilStaking|ZionSpaceManager).json' --out-dir types && tsc --build",
        "test:forge": "FOUNDRY_PROFILE=governance forge test",
        "clean": "yarn clean:forge & yarn clean:types",
        "clean:forge": "FOUNDRY_PROFILE=governance forge clean",
        "clean:types": "rm -rf dist && rm -rf types",
        "format": "prettier --write contracts/**/*.sol",
        "lint": "solhint contracts/**/*.sol",
        "lint:fix": "solhint --fix contracts/**/*.sol",
        "publish": "yarn publish:local",
        "publish:goerli": "yarn publish:goerli:typings && yarn publish:goerli:abis && yarn publish:goerli:gobindings",
        "publish:goerli:abis": "mkdir -p ../../packages/contracts/goerli/abis && cp -a artifacts_foundry/(CouncilNFT|CouncilStaking|ZionSpaceManager).sol/* ../../packages/contracts/goerli/abis/",
        "publish:goerli:typings": "cp -a ./dist/ ../../packages/contracts/goerli/typings",
        "publish:goerli:gobindings": "mkdir -p ../../servers/dendrite/zion_goerli && go run github.com/ethereum/go-ethereum/cmd/abigen@v1.10.25  --abi artifacts_foundry/ZionSpaceManager.sol/ZionSpaceManager.abi.json --pkg zion_goerli  --type zion_space_manager_goerli --out ../../servers/dendrite/zion_goerli/zion_space_manager_goerli.go",
        "publish:local": "yarn publish:local:typings && yarn publish:local:abis && yarn publish:local:gobindings",
        "publish:local:abis": "mkdir -p ../../packages/contracts/localhost/abis && cp -a artifacts_foundry/(CouncilNFT|CouncilStaking|ZionSpaceManager).sol/* ../../packages/contracts/localhost/abis/",
        "publish:local:typings": "cp -a ./dist/ ../../packages/contracts/localhost/typings",
        "publish:local:gobindings": "mkdir -p ../../servers/dendrite/zion_localhost && go run github.com/ethereum/go-ethereum/cmd/abigen@v1.10.25  --abi artifacts_foundry/ZionSpaceManager.sol/ZionSpaceManager.abi.json --pkg zion_localhost  --type zion_space_manager_localhost --out ../../servers/dendrite/zion_localhost/zion_space_manager_localhost.go"
    },
    "dependencies": {
        "@opengsn/contracts": "^2.2.6"
    },
    "devDependencies": {
        "@ethersproject/abi": "^5.7.0",
        "@ethersproject/providers": "^5.7.1",
        "@harmony/eslint-config": "1.0.0",
        "@opengsn/provider": "^2.2.6",
        "@typechain/ethers-v5": "^10.1.0",
        "@types/chai": "^4.3.3",
        "@types/node": "^18.7.23",
        "eslint": "^8.24.0",
        "eslint-plugin-node": "^11.1.0",
        "ethers": "^5.7.1",
        "keccak256": "^1.0.6",
        "merkletreejs": "^0.2.32",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-beta.24",
        "solhint": "^3.3.7",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.2",
        "solidity-docgen": "^0.6.0-beta.28",
        "solidity-json-writer": "^1.1.0",
        "typechain": "^8.1.0",
        "typescript": "^4.8.4"
    },
    "packageManager": "yarn@3.2.2"
}

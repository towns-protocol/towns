{
  "name": "@harmony/zion-governance",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "bootstrap": "yarn clean && yarn build",
    "build:deps": "../../scripts/install-deps.sh",
    "build": "yarn build:deps && yarn compile:hh && hardhat prepare-package && tsc --build && yarn compile:foundry",
    "clean": "hardhat clean && FOUNDRY_PROFILE=governance forge clean && rm -rf dist && rm -rf src",
    "compile:hh": "hardhat compile",
    "compile:foundry": "FOUNDRY_PROFILE=governance forge build",
    "copy-definitions": "cp src/*.d.ts dist/src",
    "lint": "solhint contracts/**/*.sol",
    "lint:fix": "solhint --fix contracts/**/*.sol",
    "test:foundry": "FOUNDRY_PROFILE=governance forge test",
    "publish": "cp -a ./dist/ ../../packages/contracts/governance"
  },
  "dependencies": {
    "@opengsn/contracts": "^2.2.6",
    "@openzeppelin/contracts": "^4.7.3"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@harmony/eslint-config": "1.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@opengsn/provider": "^2.2.6",
    "@openzeppelin/hardhat-upgrades": "^1.18.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/node": "^18.7.1",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-deploy": "^0.11.12",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-packager": "^1.4.2",
    "hardhat-preprocessor": "^0.1.4",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.2.32",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}

{
	"name": "@towns-protocol/stream-metadata",
	"version": "0.0.0",
	"private": true,
	"packageManager": "yarn@3.8.0",
	"type": "module",
	"main": "dist/node.cjs",
	"scripts": {
		"build": "yarn typecheck && yarn compile",
		"compile": "node ./esbuild.config.mjs",
		"cp-config": "cp ./.env.local-sample ./.env.local && echo .env.local file copied successfully",
		"dev:alpha": "RIVER_ENV=alpha ENVIRONMENT=alpha BASE_CHAIN_RPC_URL=https://sepolia.base.org RIVER_CHAIN_RPC_URL=https://devnet.rpc.river.build PORT=3002 RIVER_STREAM_METADATA_BASE_URL=http://localhost:3002 yarn run-build",
		"dev:local_dev": "yarn cp-config && PORT=3002 RIVER_STREAM_METADATA_BASE_URL=http://localhost:3002 dotenv -e ../generated/deployments/local_dev/.env -- yarn run-build",
		"dev:omega": "RIVER_ENV=omega ENVIRONMENT=omega BASE_CHAIN_RPC_URL=https://mainnet.base.org RIVER_CHAIN_RPC_URL=https://mainnet.rpc.river.build PORT=3002 RIVER_STREAM_METADATA_BASE_URL=http://localhost:3002 yarn run-build",
		"dev": "yarn dev:local_dev",
		"kill:local_dev": "kill -9 $(lsof -t -i:3002)",
		"lint:fix": "eslint . --ext .ts --fix",
		"lint": "eslint . --ext .ts",
		"prettier": "prettier --config ../prettier-config/config.js --ignore-path .prettierignore .",
		"run-build": "yarn build && node ./dist/node_esbuild.cjs",
		"start": "node ./dist/node_esbuild.cjs",
		"test:integration": "RIVER_STREAM_METADATA_BASE_URL=http://localhost:3002 DEBUG='csb:*,test:*' dotenv -e ../generated/deployments/local_dev/.env -- vitest run --testNamePattern integration/stream-metadata",
		"test:watch": "vitest --watch",
		"test": "vitest run",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@aws-sdk/client-cloudfront": "^3.645.0",
		"@bufbuild/buf": "^1.32.0",
		"@bufbuild/protobuf": "^2.2.2",
		"@connectrpc/connect-node": "^2.0.0",
		"@fastify/cors": "^11.0.1",
		"@towns-protocol/generated": "workspace:^",
		"@towns-protocol/proto": "workspace:^",
		"@towns-protocol/sdk": "workspace:^",
		"@towns-protocol/sdk-crypto": "workspace:^",
		"@towns-protocol/web3": "workspace:^",
		"dd-trace": "^5.19.0",
		"dotenv": "^16.4.7",
		"esbuild-plugin-pino": "^2.2.0",
		"ethers": "^5.7.2",
		"fastify": "^5.3.3",
		"lru-cache": "^11.0.1",
		"magic-bytes.js": "^1.10.0",
		"pino": "^8.17.1",
		"pino-pretty": "^13.0.0",
		"uuid": "^8.3.2",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@towns-protocol/dlog": "workspace:^",
		"@towns-protocol/encryption": "workspace:^",
		"@towns-protocol/eslint-config": "workspace:^",
		"@towns-protocol/prettier-config": "workspace:^",
		"@types/node": "^20.14.8",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/parser": "^8.29.0",
		"axios": "^1.9.0",
		"dotenv-cli": "^10.0.0",
		"esbuild": "^0.21.5",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-import-resolver-typescript": "^4.3.2",
		"eslint-plugin-import-x": "^4.10.2",
		"eslint-plugin-prettier": "^5.2.6",
		"fake-indexeddb": "^6.0.1",
		"prettier": "^3.5.3",
		"typescript": "^5.8.2",
		"vitest": "^3.2.3"
	}
}

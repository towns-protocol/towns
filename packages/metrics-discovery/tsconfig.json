{
    // TODO: move this to app tsconfig once we figure out the proper way to handle the generated package
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "target": "es2020",
        "noImplicitAny": true,
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "outDir": "dist",
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}

{
    "name": "@towns-protocol/subgraph",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "codegen": "bun run typings && ponder codegen",
        "db": "ponder db",
        "dev": "bun run typings && ponder dev",
        "dev:fork": "./scripts/setup-subgraph.sh",
        "dev:no-ui": "bun run typings && ponder dev --disable-ui",
        "find-paths": "tsx utils/findContractsPath.ts",
        "format": "prettier --write \"src/**/*.{ts,tsx}\" \"ponder.config.ts\" \"ponder.schema.ts\"",
        "lint": "eslint \"src/**/*.{ts,tsx}\" \"ponder.config.ts\" \"ponder.schema.ts\"",
        "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\" \"ponder.config.ts\" \"ponder.schema.ts\"",
        "serve": "bun run typings && ponder serve",
        "start": "bun run typings && ponder start",
        "test:unit": "bun run typings && sh -c 'tsc --noEmit'",
        "transfer-ownership": "tsx interactions/transfer-ownership.ts",
        "typings": "turbo typings --filter @towns-protocol/contracts && turbo build --filter @towns-protocol/web3"
    },
    "dependencies": {
        "@towns-protocol/web3": "workspace:^",
        "axios": "^1.9.0",
        "hono": "^4.7.11",
        "ponder": "^0.13.14",
        "viem": "^2.29.3"
    },
    "devDependencies": {
        "@towns-protocol/contracts": "workspace:^",
        "@towns-protocol/generated": "workspace:^",
        "@towns-protocol/prettier-config": "workspace:^",
        "@types/node": "^20.14.8",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "eslint": "^8.57.1",
        "eslint-config-ponder": "^0.9.27",
        "eslint-import-resolver-typescript": "^4.3.2",
        "eslint-plugin-prettier": "^5.2.6",
        "eslint-plugin-tsdoc": "^0.3.0",
        "prettier": "^3.5.3",
        "tsx": "^4.7.1",
        "typescript": "~5.8.3"
    },
    "engines": {
        "node": ">=18.14"
    }
}

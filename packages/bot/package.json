{
    "name": "@towns-protocol/bot",
    "version": "0.0.167",
    "packageManager": "yarn@3.8.0",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --outDir dist",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "dev": "my-node src/index.ts",
        "lint": "yarn eslint --format unix ./src  --max-warnings=0",
        "lint:fix": "yarn lint --fix",
        "test:unit": "vitest run --config vitest.config.unit.ts",
        "test:ci": "yarn test:ci:multi:ne",
        "test:watch": "vitest --watch",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@bufbuild/protobuf": "^1.9.0",
        "@hono/node-server": "^1.13.8",
        "@towns-protocol/encryption": "workspace:*",
        "@towns-protocol/proto": "workspace:*",
        "@towns-protocol/sdk": "workspace:*",
        "@towns-protocol/web3": "workspace:*",
        "hono": "^4.7.2",
        "typed-emitter": "^2.1.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.8",
        "@types/lodash": "^4.14.186",
        "@types/node": "^20.5.0",
        "@types/seedrandom": "^3.0.4",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^8.53.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-tsdoc": "^0.3.0",
        "fake-indexeddb": "^4.0.1",
        "typescript": "^5.1.6",
        "vitest": "^2.1.5",
        "vitest-fetch-mock": "^0.4.3"
    },
    "files": [
        "/dist"
    ]
}

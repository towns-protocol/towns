{
    "name": "@towns-protocol/bot",
    "version": "0.0.379",
    "packageManager": "yarn@3.8.0",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "lint": "yarn eslint --format unix ./src --max-warnings=0",
        "lint:fix": "yarn lint --fix",
        "load-env": "dotenv -e ../generated/deployments/local_dev/.env --",
        "test": "yarn load-env vitest",
        "test:ci:multi:ent": "yarn load-env vitest run",
        "test:watch": "yarn load-env vitest --watch",
        "typecheck": "tsc --noEmit",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@bufbuild/protobuf": "^2.9.0",
        "@connectrpc/connect-node": "^2.1.0",
        "@standard-schema/spec": "^1.0.0-beta.9",
        "@towns-protocol/encryption": "workspace:^",
        "@towns-protocol/proto": "workspace:^",
        "@towns-protocol/sdk": "workspace:^",
        "@towns-protocol/sdk-crypto": "workspace:^",
        "@towns-protocol/utils": "workspace:^",
        "@towns-protocol/web3": "workspace:^",
        "ethers": "^5.8.0",
        "image-size": "^2.0.2",
        "jsonwebtoken": "^9.0.2",
        "nanoevents": "^9.1.0",
        "superjson": "^2.2.2"
    },
    "devDependencies": {
        "@hono/node-server": "^1.14.0",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^20.14.8",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "dotenv-cli": "^10.0.0",
        "eslint": "^8.57.1",
        "eslint-import-resolver-typescript": "^4.3.2",
        "eslint-plugin-import-x": "^4.10.2",
        "eslint-plugin-tsdoc": "^0.3.0",
        "fake-indexeddb": "^6.0.1",
        "hono": "^4.7.11",
        "typescript": "~5.8.3",
        "viem": "^2.29.3",
        "vitest": "^3.2.3",
        "zod": "^3.25.76"
    },
    "files": [
        "/dist",
        "package.json"
    ],
    "peerDependencies": {
        "hono": ">=4",
        "viem": "2.x"
    },
    "publishConfig": {
        "access": "public"
    }
}

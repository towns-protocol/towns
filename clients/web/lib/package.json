{
    "name": "use-zion-client",
    "description": "Zion client, bundles matrix and web3 functionality",
    "version": "1.0.0",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "build": "tsc",
        "lint": "eslint .",
        "lint:fix": "yarn lint --fix",
        "postinstall": "tsc",
        "prepack": "tsc",
        "test:e2e": "NODE_ENV=development yarn node --experimental-vm-modules --experimental-wasm-modules $(yarn bin jest) --forceExit --silent --maxWorkers=5",
        "test": "yarn test:e2e",
        "test-load": "tsc && NUM_CLIENTS=25 NODE_ENV=development yarn node --experimental-vm-modules --experimental-wasm-modules $(yarn bin jest) --forceExit --group=integration/load --testTimeout=600000",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@matrix-org/olm": "^3.2.13",
        "@types/node-emoji": "^1.8.2",
        "@zion/client": "workspace:^",
        "@zion/core": "workspace:^",
        "node-emoji": "^1.11.0"
    },
    "devDependencies": {
        "@harmony/contracts": "workspace:^",
        "@testing-library/dom": "^8.19.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.2.0",
        "@types/react": "^18.0.21",
        "@types/request": "^2.48.8",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "eslint": "^8.25.0",
        "eslint-plugin-lodash": "^7.4.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "ethers": "^5.7.2",
        "http-status-codes": "^2.2.0",
        "jest": "^29.2.1",
        "jest-canvas-mock": "^2.4.0",
        "jest-environment-jsdom": "^29.2.1",
        "jest-runner-groups": "^2.2.0",
        "lodash": "^4.17.21",
        "matrix-js-sdk": "20.1.0",
        "pino": "^8.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "siwe": "^1.1.6",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4",
        "wagmi": "^0.7.5",
        "zustand": "^4.1.2"
    },
    "files": [
        "/dist"
    ]
}

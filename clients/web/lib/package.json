{
    "name": "use-zion-client",
    "description": "Zion client, bundles matrix and web3 functionality",
    "version": "1.0.0",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "lint": "eslint .",
        "lint:fix": "yarn lint --fix",
        "my-jest": "NODE_ENV=development yarn node -r ../../../scripts/node-no-warn.js --experimental-vm-modules --experimental-wasm-modules $(yarn bin jest) --forceExit",
        "postinstall": "tsc",
        "preinstall": "yarn run --top-level csb:build",
        "prepack": "tsc",
        "test": "yarn test:e2e",
        "test-load": "NUM_CLIENTS=25 yarn my-jest --group=integration/load --testTimeout=600000",
        "test:e2e": "yarn my-jest --silent --maxWorkers=5",
        "test:e2e-csb": "PRIMARY_PROTOCOL=casablanca yarn test:e2e",
        "test:e2e-csb-ts-only": "yarn test:e2e-csb **/*.ts",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@harmony/contracts": "workspace:^",
        "@matrix-org/olm": "^3.2.13",
        "@tanstack/react-query": "^4.14.3",
        "@types/node-emoji": "^1.8.2",
        "@zion/client": "workspace:^",
        "@zion/core": "workspace:^",
        "ethers": "^5.7.2",
        "http-status-codes": "^2.2.0",
        "lodash": "^4.17.21",
        "matrix-js-sdk": "23.1.1",
        "node-emoji": "^1.11.0",
        "siwe": "^1.1.6",
        "wagmi": "^0.10.4",
        "zustand": "^4.1.2"
    },
    "devDependencies": {
        "@testing-library/dom": "^9.0.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.4.0",
        "@types/node-fetch": "^2.6.2",
        "@types/react": "^18.0.27",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.34.0",
        "eslint-plugin-lodash": "^7.4.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fake-indexeddb": "^4.0.1",
        "jest": "^29.4.3",
        "jest-canvas-mock": "^2.4.0",
        "jest-environment-jsdom": "^29.4.3",
        "jest-runner-groups": "^2.2.0",
        "pino": "^8.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4"
    },
    "files": [
        "/dist"
    ]
}

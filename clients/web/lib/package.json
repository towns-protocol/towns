{
    "name": "use-zion-client",
    "description": "Zion client, bundles matrix and web3 functionality",
    "version": "workspace:^",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "csb:test-web-lib": "PRIMARY_PROTOCOL=casablanca yarn my-jest --maxWorkers=5",
        "csb:test-web-lib-done": "yarn csb:test-web-lib --group=casablanca",
        "csb:test-web-lib-todo": "yarn csb:test-web-lib --group=-casablanca",
        "lint": "eslint .",
        "lint:fix": "yarn lint --fix",
        "my-jest": "NODE_ENV=development yarn node --trace-warnings -r ../../../scripts/node-no-warn.js --experimental-vm-modules --experimental-wasm-modules $(yarn bin jest) --forceExit --silent",
        "postinstall": "tsc",
        "preinstall": "yarn run --top-level csb:build",
        "prepack": "tsc",
        "test": "yarn test:dendrite:e2e",
        "test-load": "PRIMARY_PROTOCOL=casablanca NUM_CLIENTS=24 yarn my-jest --group=integration/load --testTimeout=100000 --silent=0",
        "test:ci": "yarn csb:test-web-lib-done --silent",
        "test:ci-todo": "yarn csb:test-web-lib-todo --silent",
        "test:dendrite:e2e": "yarn my-jest --group=dendrite --maxWorkers=5",
        "test:all": "yarn my-jest --maxWorkers=10",
        "test:all-csb": "PRIMARY_PROTOCOL=casablanca yarn test:all",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@matrix-org/olm": "^3.2.15",
        "@river/sdk": "workspace:^",
        "@tanstack/react-query": "^4.14.3",
        "@towns/generated": "workspace:^",
        "@types/node-emoji": "^1.8.2",
        "debug": "^4.3.4",
        "ethers": "^5.7.2",
        "http-status-codes": "^2.2.0",
        "lodash": "^4.17.21",
        "matrix-js-sdk": "25.0.0-rc.1",
        "node-emoji": "^1.11.0",
        "siwe": "^1.1.6",
        "viem": "^1.10.3",
        "wagmi": "^1.3.10",
        "zustand": "^4.3.3"
    },
    "devDependencies": {
        "@testing-library/dom": "^9.0.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.4.0",
        "@types/node-fetch": "^2.6.4",
        "@types/react": "^18.2.11",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "eslint": "^8.42.0",
        "eslint-plugin-lodash": "^7.4.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fake-indexeddb": "^4.0.1",
        "jest": "^29.6.2",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^29.6.2",
        "jest-runner-groups": "^2.2.0",
        "pino": "^8.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.3"
    },
    "files": [
        "/dist"
    ]
}

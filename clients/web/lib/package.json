{
    "name": "use-zion-client",
    "description": "Bundles common react hooks for the client app",
    "version": "workspace:^",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "cb": "yarn clean && yarn build",
        "clean": "rm -rf dist",
        "csb:test-web-lib": "yarn my-jest --maxWorkers=5",
        "csb:test-web-lib-done": "yarn csb:test-web-lib --group=casablanca",
        "csb:test-web-lib-todo": "yarn csb:test-web-lib --group=-casablanca --group=-integration/load --group=-synthetic",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "yarn lint --fix",
        "my-jest": "NODE_ENV=development yarn node --trace-warnings -r ../../../scripts/node-no-warn.js --experimental-vm-modules --experimental-wasm-modules $(yarn bin jest) --forceExit ",
        "postinstall": "tsc",
        "preinstall": "yarn run --top-level csb:build",
        "prepack": "tsc",
        "test": "yarn test:ci",
        "test:ci": "yarn csb:test-web-lib-done --silent",
        "test:ci-todo": "yarn csb:test-web-lib-todo --silent",
        "test:load:all": "yarn my-jest --group=integration/load --testTimeout=3000000",
        "test:userops": "DOTENV_CONFIG_PATH=.env.test.userops yarn my-jest --group=integration/userops --testTimeout=3000000 --silent=false",
        "create-dev-town": "yarn my-jest ./scripts/create-dev-town.test.ts --testTimeout=3000000",
        "watch": "tsc --watch"
    },
    "dependencies": {
        "@river/proto": "workspace:^",
        "@river/sdk": "workspace:^",
        "@river/web3": "workspace:^",
        "@tanstack/react-query": "^5.17.15",
        "@towns/generated": "workspace:^",
        "@towns/userops": "workspace:^",
        "@types/node-emoji": "^1.8.2",
        "debug": "^4.3.4",
        "ethers": "^5.7.2",
        "http-status-codes": "^2.2.0",
        "json-bigint": "^1.0.0",
        "lodash": "^4.17.21",
        "node-emoji": "^1.11.0",
        "siwe": "^1.1.6",
        "viem": "^1.18.2",
        "zustand": "^4.3.3"
    },
    "devDependencies": {
        "@testing-library/dom": "^9.0.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/deep-diff": "^1.0.5",
        "@types/jest": "^29.5.3",
        "@types/json-bigint": "^1.0.4",
        "@types/node-fetch": "^2.6.4",
        "@types/react": "^18.2.11",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "bullmq": "^4.10.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.53.0",
        "eslint-plugin-lodash": "^7.4.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fake-indexeddb": "^4.0.1",
        "jest": "^29.6.2",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^29.6.2",
        "jest-runner-groups": "^2.2.0",
        "pino": "^8.17.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    },
    "files": [
        "/dist"
    ]
}

{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    },
    "project": "./tsconfig.json",
    "allowImportExportEverywhere": true
  },
  "ignorePatterns": ["vitest.setup.ts"],
  "plugins": [
    "boundaries",
    "@typescript-eslint",
    "import",
    "react",
    "jest",
    "testing-library"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:prettier/recommended",
    "prettier",
    "plugin:testing-library/react",
    "plugin:boundaries/recommended"
  ],

  "rules": {
    "curly": "warn",
    "@typescript-eslint/no-base-to-string": "error",
    "@typescript-eslint/no-unused-vars": ["warn", { "args": "none" }],
    "import/no-named-as-default-member": "off",
    "react/display-name": "off",
    "react/jsx-boolean-value": ["warn", "never"],
    "react/jsx-curly-brace-presence": [
      "error",
      { "props": "never", "children": "ignore" }
    ],
    "react/jsx-wrap-multilines": "error",
    "react/no-array-index-key": "error",
    "react/no-multi-comp": "off",
    "react/prop-types": "off",
    "react/self-closing-comp": "warn",

    "react/jsx-sort-props": [
      "warn",
      {
        "shorthandFirst": true,
        "callbacksLast": true,
        "noSortAlphabetically": true
      }
    ],
    "import/no-cycle": ["warn"],
    "import/order": [
      "error",
      {
        "groups": ["external", "internal"]
      }
    ],
    "sort-imports": [
      "warn",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false
      }
    ],
    "testing-library/no-debugging-utils": "off",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "use-towns-client",
            "importNames": ["useCasablancaCredentials"],
            "message": "Please use useAuth for credentials or useMyProfile for userId."
          },
          {
            "name": "ui/components",
            "message": "Please import via @ui"
          },
          {
            "name": "framer-motion",
            "importNames": ["Box"],
            "message": "Please use Box from @ui"
          },
          {
            "name": "react-error-boundary",
            "message": "Use our dd-wrapped error boundary instead, via @components/ErrorBoundary/ErrorBoundary"
          }
        ]
      }
    ],
    "boundaries/element-types": [
      "error",
      {
        "default": "allow",
        "rules": [
          {
            "message": "to enhance code-splitting. @ui package should not contain dependencies outside the ui/ folder",
            "from": ["ui"],
            "disallow": ["components"]
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/components/NodeAnimation/**/*.tsx"],
      "rules": {
        // three react fiber
        "react/no-unknown-property": ["off", { "ignore": ["JSX"] }]
      }
    },
    {
      "files": ["src/*.mdx"],
      "extends": ["plugin:mdx/recommended"],
      "rules": {
        "prettier/prettier": "off",
        "import/no-anonymous-default-export": "off",
        "react/display-name": "off",
        "react/jsx-no-undef": "off",
        "no-undef": "warn"
      },
      "settings": {
        "mdx/code-blocks": true
      }
    },
    {
      "files": ["src/*.{md,mdx}"],
      "extends": "plugin:mdx/code-blocks",
      "rules": {
        "prettier/prettier": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "import/no-unresolved": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-no-undef": "off"
      }
    },
    {
      "files": ["src/components/ErrorBoundary/ErrorBoundary.tsx"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ],
  "settings": {
    "boundaries/elements": [
      {
        "type": "ui",
        "pattern": "src/ui/components/**"
      },
      {
        "type": "components",
        "pattern": "src/components/**"
      }
    ],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx", ".d.ts"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": ["./tsconfig.json"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  }
}

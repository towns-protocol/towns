{
    "name": "@towns/userops",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "lint": "eslint .",
        "build": "tsc",
        "preinstall": "yarn run --top-level csb:build",
        "postinstall": "yarn build",
        "lint:fix": "yarn lint --fix",
        "watch": "tsc --watch",
        "test:userops:paymaster-limits": "DOTENV_CONFIG_PATH=.env.test-sample vitest run --project limits",
        "test:userops": "DOTENV_CONFIG_PATH=.env.test-sample vitest run --project main",
        "test:userops:legacy": "DOTENV_CONFIG_PATH=.env.test-sample CREATE_LEGACY_SPACES=true vitest run --project legacy"
    },
    "dependencies": {
        "@towns-protocol/web3": "workspace:^",
        "dotenv": "^16.4.5",
        "permissionless": "^0.2.33",
        "superjson": "^2.2.2",
        "viem": "2.23.2",
        "web3": "^4.16.0",
        "zod": "^3.21.4",
        "zustand": "^4.5.4"
    },
    "devDependencies": {
        "@towns-protocol/prettier-config": "workspace:^",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^7.14.1",
        "@vitest/coverage-v8": "^1.2.0",
        "@vitest/web-worker": "^2.1.4",
        "eslint": "^8.53.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-vitest": "^0.5.4",
        "typescript": "5.6.2",
        "vitest": "^1.6.0"
    }
}
